@model FeelingSpa.Web.ViewModels.Services.ServiceInputModel
@{
    this.ViewData["Title"] = "Add Service";
    var categoryItems = this.Model.CategoriesItems
        .Select(x => new SelectListItem(x.Value, x.Key));
}
<form metod="post" class="col-md-6 offset-md-3"asp-controller="Services"asp-action="Create" enctype="multipart/form-data">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        @*<vc:CategoriesDropDown name="CategoryId"></vc:CategoriesDropDown>*@
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <input type="submit" class="btn btn-primary" />
    </div>
</form>
