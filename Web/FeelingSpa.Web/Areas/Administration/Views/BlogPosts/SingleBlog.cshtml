    @model FeelingSpa.Web.ViewModels.BlogPost.BlogPostViewModel
    @{ this.ViewData["Title"] = "Blog"; }
    

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="info_image"><img src="@Model.ImageUrl" width="500" height="auto" alt="Image" class="img-fluid"></div>
                <div class="news_post_title">
                    <a asp-area="Administration" asp-controller="BlogPosts" asp-action="SingleBlog" asp-route-id="@Model.Id">@Model.Title</a>
                </div>
                <p> <a asp-area="Administration" asp-controller="BlogPosts" asp-action="SingleBlog" asp-route-id="@Model.Id">by @Model.Author</a></p>
                <p> <a asp-area="Administration" asp-controller="BlogPosts" asp-action="SingleBlog" asp-route-id="@Model.Id"> @Model.CreatedOn.Date.ToString("D")</a></p>
                <p>@Model.Content</p>
            </div>
        </div>
    </div>

