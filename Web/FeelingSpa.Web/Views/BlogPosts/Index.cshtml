@model FeelingSpa.Web.ViewModels.BlogPost.BlogPostsItemsListViewModel
@{ this.ViewData["Title"] = "Blog"; }

<div class="row">
    <!-- News Posts -->
    <div class="col-lg-8">
        <div class="news_posts">
            @foreach (var blogPost in Model.BlogPosts)
            {
                <hr class="bg-dark mx-4" style="height: 6px;" /> <!-- News Post -->
                <div class="news_post">
                    <div class="news_post_image"><img src="@blogPost.ImageUrl" alt=""></div>
                    <div class="news_post_content">
                        <div class="news_post_title">
                            <a asp-area="" asp-controller="BlogPosts" asp-action="" asp-route-id="@blogPost.Id">@blogPost.Title</a>
                        </div>
                        <div class="news_post_info">
                            <ul class="d-flex flex-row align-items-center justify-content-start">
                                <li>
                                    <a asp-area="" asp-controller="BlogPosts" asp-action="" asp-route-id="@blogPost.Id">by @blogPost.Author</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="BlogPosts" asp-action="" asp-route-id="@blogPost.Id">@blogPost.CreatedOn.Date.ToString("D")</a>
                                </li>
                            </ul>
                        </div>
                        <div class="news_post_text">
                            <p>@blogPost.Content</p>
                        </div>
                    </div>
                </div>}
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <div class="news_sidebar">
            <!-- Latest News -->
            <div class="sidebar_latest">
                <div class="sidebar_title">Latest Blog Posts</div>
                <div class="sidebar_latest_container">
                    <div>
                        @*@await Component.InvokeAsync("LatestBlogPosts", 10)*@
                        
                        @foreach (var blogPost in Model.BlogPosts)
                        {
                            <!-- Latest News Post -->
                            <div class="latest d-flex flex-row align-items-start justify-content-start">
                                <div><div class="latest_image"><img src="@blogPost.ImageUrl" alt=""></div></div>
                                <div class="latest_content">
                                    <div class="latest_title">
                                        <a asp-area="" asp-controller="BlogPosts" asp-action="Index" asp-route-id="@blogPost.Id">@blogPost.Title</a>
                                    </div>
                                    <div class="latest_info">
                                        <ul class="d-flex flex-row align-items-start justify-content-start">
                                            <li><a>by @blogPost.Author</a></li>
                                            <li><a>@blogPost.CreatedOn.Date.ToString("D")</a></li>
                                        </ul>
                                    </div>
                                    <div class="latest_comments">
                                        <a asp-area="" asp-controller="BlogPosts" asp-action="SingleBlog" asp-route-id="@blogPost.Id">Read</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



