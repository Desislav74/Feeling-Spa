@model FeelingSpa.Web.ViewModels.Category.CategoryInListViewModel
@{
    this.ViewData["Title"] = "Category: " + Model.Name;
}


<div class="row row-eq-height">
    <!-- Info Box -->
    <div class="col-md-8 offset-2">
        <div class="info_box">
            <div class="info_image"><img src="@Model.ImageUrl" width="1000" height="400" alt=""></div>
            <div class="info_content">
                <div class="info_title">@Model.Name</div>
                <div class="info_text">Address: <strong>@Model.Description</strong></div>
                <div class="info_text">
                    @*<ul>
                            <li class="single-meta">
                                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
                            </li>
                            <li class="single-meta">
                                <form method="post" asp-action="DeleteCategory" id="deleteForm" asp-route-id="@Model.Id">
                                </form>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
                            </li>

                            <li class="single-meta">
                                <button class="btn btn-warning" onclick="window.print()">Print</button>
                            </li>
                        </ul>*@

                    <div class="btn-group btn-group-lg" role="group" aria-label="...">
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>

                        <form method="post" asp-action="DeleteCategory" id="deleteForm" asp-route-id="@Model.Id">
                        </form>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>

                        <button class="btn btn-warning" onclick="window.print()">Print</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete "@Model.Name"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/rating-static.js" asp-append-version="true"></script>
}